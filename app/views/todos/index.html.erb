<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Summary</th>
      <!--<th><%#= link_to "Priority", todos_path(sort_by: :priority, order: :asc) %></th>-->
      <th><%= sortable "priority" %></th>
      <th><%= sortable "due_at", "Due at" %></th>
      <th>Complete</th>
      <th colspan="3"></th>
      <th> Change Order  </th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr id="todo_<%= todo.id %>" class="_capybara-todo todo <%= todo.complete ? "completed" : "" %>">
        <%= render todo %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
