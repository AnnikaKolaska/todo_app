<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Summary</th>
      <!--<th><%#= link_to "Priority", todos_path(sort_by: :priority, order: :asc) %></th>-->
      <th><%= sortable "priority" %></th>
      <th><%= sortable "due_at", "Due at" %></th>
      <th>Complete</th>
      <th colspan="3"></th>
      <th> Change Order  </th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr class="_capybara-todo">
        <td><%= todo.summary %></td>
        <td><%= todo.priority %></td>
        <td><%= todo.due_at %></td>
        <td><%= todo.complete %></td>
        <td>
          <%= form_with(model: todo, local: true) do |form| %>
            <div class="field">
              <%= form.label :complete %>
              <%= form.check_box :complete, class: 'checkbox' %>
            </div>
          <% end %>
        </td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

